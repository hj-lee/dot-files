### ruby1.9
function ruby19() {
    export PATH=~hjlee/usr/ruby-1.9.0/bin:${PATH}
    PS1="-ruby1.9- \w\$ "
}

function ruby191() {
    export PATH=~hjlee/usr/ruby-1.9.1/bin:${PATH}
    PS1="-ruby1.9.1- \w\$ "
}

function rubysvn() {
    export PATH=~hjlee/usr/ruby-svn$1/bin:${PATH}
    PS1="-ruby svn $1- \w\$ "
}
